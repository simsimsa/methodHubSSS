{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "pnpm --filter frontend build",
    "watchPatterns": ["/frontend/**"]
  },
  "deploy": {
    "startCommand": "pnpm --filter frontend start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

